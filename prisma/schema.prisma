// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}


model Images {
  id      Int      @id @default(autoincrement())
  img_name  String
  url   String   @db.VarChar(255) @unique
  caption String?
}

model Lists {
  id       Int     @id @default(autoincrement())
  activity String  @unique
  title    String?
    color    String
}
model Users {
  id         Int                 @id @default(autoincrement())
  name      String 
  likeds Likeds[]
  playlists Playlists[]
}

model Playlists{
  id  Int   @id @default(autoincrement())
  name  String
  user    Users?    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId  Int
  songs SongsOnPlaylists[]
}

model SongsOnPlaylists{
  playlist       Playlists?     @relation(fields: [playlistId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  playlistId     Int 
  songs   Songs? @relation(fields: [songId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  songId Int
   @@id([playlistId, songId])
}

model Songs {
  id    Int                 @id @default(autoincrement())
  title  String
 url   String   @db.VarChar(255)
  likeds Likeds[]
  playlists SongsOnPlaylists[]  
}

model Likeds {
  user       Users?     @relation(fields: [userId], references: [id])
  userId     Int 
  songs   Songs? @relation(fields: [songId], references: [id])
  songId Int
  @@id([userId, songId])
}